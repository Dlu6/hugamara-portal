{
  "appId": "com.mayday.appbar",
  "productName": "Appbar",
  "directories": {
    "output": "release/"
  },
  "files": ["dist/**/*", "electron/**/*"],
  "win": {
    "target": ["nsis"],
    "icon": "build/mayday_app_icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Appbar"
  },
  "publish": {
    "provider": "generic",
    "url": "https://maydaycrm.com/downloads/"
  }
}
